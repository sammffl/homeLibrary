doctype html
html
    head
        meta(charset="utf8")
        meta(name="viewport",content="width=device-width,initial-scale=1.0,minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
        link(rel="stylesheet",href="bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="./static/css/common.css")
        <!--[if lt IE 9]>
        script(src="bower_components/html5shiv/dist/html5shiv.min.js")
        script(src="bower_components/respond/dest/respond.min.js")
        <![endif]-->
        link(rel="stylesheet",href="./static/css/home.css")
    body
        nav.navbar.navbar-inverse
            div.container-fluid
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#menu",aria-expanded="false")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#") Brand
                div#menu.collapse.navbar-collapse
                    div#sign.nav.navbar-nav.navbar-right
                        button.btn.btn-default.navbar-btn Sign in
                        button.btn.btn-primary.navbar-btn Sign up

                    ul.nav.navbar-nav.navbar-right
                        li.active
                            a(href="#") Link
                                span.sr-only (current)
                        li
                            a(href="#") Link
                        li
                            button.btn.btn-primary.navbar-btn Sign up
        div.jumbotron#search-jumbotron
            div.container
                div.row
                    div.col-xs-12
                        div.input-group
                            div.input-group-btn
                                button#search-btn.btn.btn-default.dropdown-toggle(type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false",data-type="book")
                                    span.text 书籍
                                    span.caret
                                ul.dropdown-menu#search-menu
                                    li
                                        a(href="javascript:void(0);",data-type="film") 电影
                                    li
                                        a(href="javascript:void(0);",data-type="teleplay") 电视剧
                            input#search-text.form-control(type="text",aria-label="...")

        div #{ip}
        script(src="bower_components/jquery/dist/jquery.min.js")
        script(src="bower_components/bootstrap/dist/js/bootstrap.min.js")
        script(src="./static/js/common.js")
        script(src="./static/js/home.js")
